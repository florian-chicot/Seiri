<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="wrap_content"
  android:orientation="horizontal">

    <ImageView
      android:id="@+id/pictureFP"
      android:layout_width="128dp"
      android:layout_height="96dp"
      android:layout_weight="1"
      tools:srcCompat="@tools:sample/avatars" />

    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:layout_weight="1"
      android:gravity="start"
      android:orientation="vertical">

      <TextView
        android:id="@+id/tvViewNameFoodProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="tvViewNameFoodProduct"
        android:textSize="18sp"
        android:textStyle="bold" />

      <TextView
        android:id="@+id/tvViewDateFoodProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:paddingBottom="6dp"
        android:text="tvViewDateFoodProduct"
        android:textSize="18sp" />

      <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:layout_marginLeft="8dp"
        android:orientation="horizontal">

        <ImageView
          android:id="@+id/circle_dark_green"
          android:layout_width="20dp"
          android:layout_height="24dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/ic_circle_dark_green" />
        <ImageView
          android:id="@+id/circle_light_green"
          android:layout_width="20dp"
          android:layout_height="24dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/ic_circle_light_green" />
        <ImageView
          android:id="@+id/circle_orange"
          android:layout_width="20dp"
          android:layout_height="24dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/ic_circle_orange" />
        <ImageView
          android:id="@+id/circle_red"
          android:layout_width="20dp"
          android:layout_height="24dp"
          android:layout_weight="1"
          app:srcCompat="@drawable/ic_circle_red" />

        <TextView
          android:id="@+id/tvViewExpiryFoodProduct"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginLeft="8dp"
          android:text="tvViewExpiryFoodProduct"
          android:textSize="18sp" />

      </LinearLayout>
    </LinearLayout>

</LinearLayout>